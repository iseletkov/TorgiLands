<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TorgiLands"
        tools:targetApi="31"
        android:usesCleartextTraffic="true"
        >
        <activity
            android:name=".ui.activitylanddetail.CActivityLandDetails"
            android:exported="false" />
        <activity
            android:name=".ui.activitybottomnavigation.CActivityBottomNavigation"
            android:exported="true"></activity>
        <activity
            android:name=".ui.activitylandlist.CActivityLandListClassic"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CActivitySettings"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.TorgiLands" />
        <activity
            android:name=".ui.activitylandlist.CActivityLandListCompose"
            android:exported="true"
            android:label="@string/title_activity_land_list"
            android:theme="@style/Theme.TorgiLands"></activity>
        <activity
            android:name=".ui.CActivityCalculator"
            android:exported="true" >

        </activity>
    </application>

</manifest>